<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item>
                <bitmap android:src="@mipmap/bg_circle_btn_disabled"
                    android:gravity="center"/>
            </item>
            <item>
                <bitmap android:src="@mipmap/icon_exit_press"
                    android:gravity="center"/>
            </item>
        </layer-list>
    </item>
    <item android:state_selected="true">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item>
                <bitmap android:src="@mipmap/bg_circle_btn_selected"
                    android:gravity="center"/>
            </item>
            <item>
                <bitmap android:src="@mipmap/icon_exit_normal"
                    android:gravity="center"/>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item>
                <bitmap android:src="@mipmap/bg_circle_btn_press"
                    android:gravity="center"/>
            </item>
            <item>
                <bitmap android:src="@mipmap/icon_exit_press"
                    android:gravity="center"/>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item>
                <bitmap android:src="@mipmap/bg_circle_btn_normal"
                    android:gravity="center"/>
            </item>
            <item>
                <bitmap android:src="@mipmap/icon_exit_normal"
                    android:gravity="center"/>
            </item>
        </layer-list>
    </item>

</selector>