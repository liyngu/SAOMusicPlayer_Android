<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:smp="http://schemas.android.com/apk/res/com.henu.smp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/content_layout"

    android:orientation="vertical">

    <com.henu.smp.widget.MenuButton
        android:id="@+id/user_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:src="@drawable/user_menu_btn"
        smp:child_layout="@id/menu_user"/>

    <com.henu.smp.widget.MenuButton
        android:id="@+id/list_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:src="@drawable/default_menu_btn"
        smp:child_layout="@id/menu_list"/>

    <com.henu.smp.widget.MenuButton
        android:id="@+id/search_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:src="@drawable/default_menu_btn"
        smp:child_layout="@id/menu_search"/>

    <com.henu.smp.widget.MenuButton
        android:id="@+id/setting_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:src="@drawable/default_menu_btn" />

    <com.henu.smp.widget.MenuButton
        android:id="@+id/exit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:src="@drawable/default_menu_btn" />

</LinearLayout>